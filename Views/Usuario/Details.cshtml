@model QuevakWeb.Models.UsuarioModel

@{
    ViewData["Title"] = "Detalles Usuario";
    string nombreViewPadre = "Usuarios";
    string nombreView = "Usuario";
}
<div class="container-fluid">
    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index"><i class="bi bi-house"></i> Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">
                <a asp-action="Index">@nombreViewPadre</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Detalles @nombreView</li>
        </ol>
    </div>

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Información del @nombreView : @Model.IdUsuario</h6>
        </div>

        <div class="row g-3 p-3">
            <div class="col-md-4 mb-3">
                <label for="nombre" class="form-label">Nombre</label>
                <p>@Html.DisplayFor(model => model.Nombre)</p>
            </div>

            <div class="col-md-4 mb-3">
                <label for="nombre" class="form-label">Apellido Paterno</label>
                <p>@Html.DisplayFor(model => model.ApellidoP)</p>
            </div>

            <div class="col-md-4 mb-3">
                <label for="nombre" class="form-label">Apellido Materno</label>
                <p>@Html.DisplayFor(model => model.ApellidoM)</p>
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="RolUser" class="form-label"></label>
                <p>@Html.DisplayFor(model => model.RolUser)</p>
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="NameLastEdit" class="form-label"></label>
                <p>@Html.DisplayFor(model => model.NameLastEdit)</p>
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="DateLastEdit" class="form-label"></label>
                <p>@Html.DisplayFor(model => model.DateLastEdit)</p>
            </div>
        </div>
        
        <div class="col-md-12 mb-3 d-flex justify-content-center">
            <a class="btn btn-primary btn-icon-split mb-3 me-2" asp-action="Edit" asp-route-id="@Model?.IdUsuario">
                <span class="icon text-white-50">
                    <i class="bi bi-pen-fill"></i>
                </span>
                <span class="text">Editar</span>
            </a>
            <a class="btn btn-secondary btn-icon-split mb-3" asp-action="Index">
                <span class="icon text-white-50">
                    <i class="bi bi-arrow-left-circle-fill"></i>
                </span>
                <span class="text">Regresar</span>
            </a>
        </div>
        <div class="w-100 mb-3"></div>
    </div>
</div>